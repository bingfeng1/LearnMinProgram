<!--pages/scroll/scroll.wxml-->
<!-- 1.水平滚动：scroll-x -->
<scroll-view scroll-x style="background:purple">
  <view class="container1">
    <view wx:for="{{10}}" class="item1">{{item}}</view>
  </view>
</scroll-view>

<!-- 2.垂直滚动 -->
<scroll-view scroll-y style="background:orange;height:200px;margin-top:10px;">
  <view class="container2">
    <view wx:for="{{10}}" class="item1">{{item}}</view>
  </view>
</scroll-view>

<scroll-view scroll-y style="background:orange;height:200px;margin-top:10px;" bindscroll="handleScroll">
  <view class="container2">
    <view wx:for="{{10}}" class="item1">{{item}}</view>
  </view>
</scroll-view>

